--  cria um projeto react
npx create-react-app <nome_projeto>
exemplo: npx create-react-app frontend


-- cria o projeto express
npm init -y
npm install express

-- instalar o nodemon
npm nodemon -D
-- configurar nodemon
  "scripts": {
    "start": "nodemon index.js"
-- executar o nodemon
npm start

-- knex = para utiliar query build
-- instalacao
npm isntall knex
-- instalar o sqlite3
npm install sqlite3
-- criar arquivo inicial knexfile.js
npx knex init
-- configurar o arquivo inicial knexfile.js para criar migrations para gerenciamento de versao no banco de dados
    migrations: {
      directory: './src/database/migrations'
    },
    useNullAsDefault:true
-- criar migrations para gerenciamento de versao no banco de dados
npx knex migrate:make create_groups
-- executar a migrations
npx knex migrate:latest
-- CORS instalacao
npm install cors

